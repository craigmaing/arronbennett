---
/**
 * Footer Component
 *
 * Streamlined footer with copyright and essential links
 * Matches the original Arron Bennett Building Contractors site
 */
---

<footer class="bg-[#1a2d4d] text-white" aria-label="Site footer">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
    <!-- Footer Bottom - Copyright -->
    <div class="border-t border-gray-700 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-gray-300 text-sm text-center md:text-left">
          Â© 2025 Arron Bennett Building Contractors
        </p>

        <!-- Additional Links (mobile-friendly) -->
        <nav class="flex gap-4 text-sm" aria-label="Footer navigation">
          <a
            href="/privacy-policy"
            class="text-gray-300 hover:text-white transition-colors duration-200"
            aria-label="Privacy Policy"
          >
            Privacy
          </a>
          <a
            href="/terms-and-conditions"
            class="text-gray-300 hover:text-white transition-colors duration-200"
            aria-label="Terms and Conditions"
          >
            Terms of Use
          </a>
          <a
            href="/service-terms"
            class="text-gray-300 hover:text-white transition-colors duration-200"
            aria-label="Service Terms"
          >
            Service Terms
          </a>
        </nav>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Smooth hover transitions for links */
  footer a {
    position: relative;
  }

  /* Focus states for all footer links */
  footer a:focus-visible {
    outline: 2px solid #A83820;
    outline-offset: 4px;
    border-radius: 2px;
  }

  /* Underline effect on hover for main footer links */
  footer .footer-section a::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: #A83820;
    transition: width 0.3s ease;
  }

  footer .footer-section a:hover::after,
  footer .footer-section a:focus::after {
    width: 100%;
  }

  /* Underline effect for bottom navigation links */
  footer nav a::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: #A83820;
    transition: width 0.3s ease;
  }

  footer nav a:hover::after,
  footer nav a:focus::after {
    width: 100%;
  }
</style>
