---
/**
 * About Hero Component
 *
 * Recreates the exact layout from the original Arron Bennett site:
 * - Large image on left
 * - Content (heading + text + button) on right
 * - Matches original spacing and typography
 *
 * Based on screenshot from extracted-site/screenshots/home.png
 */

interface Props {
  title: string;
  content: string;
  buttonText?: string;
  buttonHref?: string;
  imageSrc: string;
  imageAlt: string;
}

const {
  title,
  content,
  buttonText = "OUR SERVICES",
  buttonHref = "/services",
  imageSrc,
  imageAlt
} = Astro.props;
---

<section class="about-hero-section">
  <div class="container">
    <div class="hero-grid">
      <!-- Left Column - Image -->
      <div class="image-column">
        <div class="image-wrapper">
          <img
            src={imageSrc}
            alt={imageAlt}
            loading="eager"
          />
        </div>
      </div>

      <!-- Right Column - Content -->
      <div class="content-column">
        <h1 class="hero-title">{title}</h1>
        <div class="hero-content">
          <p>{content}</p>
        </div>
        <div class="hero-cta">
          <a href={buttonHref} class="btn-primary">
            {buttonText}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Container - match original site max-width */
  .about-hero-section {
    background: #ffffff;
    padding: 60px 0 80px;
  }

  .container {
    max-width: 1170px;
    margin: 0 auto;
    padding: 0 15px;
  }

  /* Grid Layout - Image Left, Content Right */
  .hero-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 50px;
    align-items: start;
  }

  /* Image Column */
  .image-column {
    position: relative;
  }

  .image-wrapper {
    width: 100%;
    position: relative;
  }

  .image-wrapper img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 0;
  }

  /* Content Column */
  .content-column {
    padding: 20px 0;
  }

  /* Hero Title - matches original */
  .hero-title {
    font-size: 36px;
    line-height: 1.3;
    font-weight: 700;
    color: #2c3e50;
    margin: 0 0 25px 0;
    font-family: 'Open Sans', sans-serif;
  }

  /* Hero Content - paragraph text */
  .hero-content {
    margin-bottom: 30px;
  }

  .hero-content p {
    font-size: 16px;
    line-height: 1.8;
    color: #666666;
    margin: 0 0 15px 0;
    font-family: 'Open Sans', sans-serif;
  }

  /* Hero CTA Button - dark navy button */
  .hero-cta {
    margin-top: 30px;
  }

  .btn-primary {
    display: inline-block;
    padding: 14px 32px;
    background-color: #1a2c4d;
    color: #ffffff;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    text-decoration: none;
    border-radius: 0;
    transition: all 0.3s ease;
    font-family: 'Open Sans', sans-serif;
    border: 2px solid #1a2c4d;
  }

  .btn-primary:hover {
    background-color: transparent;
    color: #1a2c4d;
    border-color: #1a2c4d;
  }

  /* Responsive */
  @media (max-width: 991px) {
    .hero-grid {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .hero-title {
      font-size: 30px;
    }
  }

  @media (max-width: 767px) {
    .about-hero-section {
      padding: 40px 0 50px;
    }

    .hero-title {
      font-size: 26px;
      margin-bottom: 20px;
    }

    .hero-content p {
      font-size: 15px;
    }

    .btn-primary {
      padding: 12px 28px;
      font-size: 13px;
    }
  }
</style>
