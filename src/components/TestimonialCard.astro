---
/**
 * Testimonial Card Component
 *
 * Displays client testimonials with name, role, company, rating, and content.
 * Includes optional profile image and star rating display.
 *
 * @component
 * @example
 * <TestimonialCard
 *   name="John Smith"
 *   role="CEO"
 *   company="Tech Corp"
 *   content="Exceptional coaching that transformed our leadership team."
 *   rating={5}
 * />
 */

import type { TestimonialCardProps } from '../types/components';

interface Props extends TestimonialCardProps {}

const {
  name,
  role,
  company,
  content,
  rating = 5,
  image,
  class: className = '',
} = Astro.props;

const cardClass = `
  bg-white rounded-xl border border-gray-100 shadow-md
  p-8 transition-all duration-300
  hover:shadow-xl hover:border-navy-200
  ${className}
`.trim().replace(/\s+/g, ' ');

// Generate array for star rating
const stars = Array.from({ length: 5 }, (_, i) => i < rating);
---

<article class={cardClass}>
  <!-- Quote Icon -->
  <div class="mb-6">
    <svg
      class="w-10 h-10 text-coral-400 opacity-50"
      fill="currentColor"
      viewBox="0 0 24 24"
      aria-hidden="true"
    >
      <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
    </svg>
  </div>

  <!-- Testimonial Content -->
  <div class="mb-6">
    <p class="text-gray-800 text-lg leading-relaxed italic">
      "{content}"
    </p>
  </div>

  <!-- Rating -->
  {rating && (
    <div class="flex gap-1 mb-6" role="img" aria-label={`Rating: ${rating} out of 5 stars`}>
      {stars.map((filled) => (
        <svg
          class={`w-5 h-5 ${filled ? 'text-yellow-400' : 'text-gray-300'}`}
          fill="currentColor"
          viewBox="0 0 20 20"
          aria-hidden="true"
        >
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
        </svg>
      ))}
    </div>
  )}

  <!-- Author Information -->
  <div class="flex items-center gap-4 pt-6 border-t border-gray-100">
    {image ? (
      <img
        src={image}
        alt={`${name} profile picture`}
        class="w-14 h-14 rounded-full object-cover border-2 border-navy-100"
        loading="lazy"
      />
    ) : (
      <div class="w-14 h-14 rounded-full bg-navy-100 flex items-center justify-center">
        <span class="text-navy-700 font-semibold text-lg">
          {name.charAt(0)}
        </span>
      </div>
    )}

    <div class="flex-1">
      <p class="font-semibold text-navy-900 text-lg">
        {name}
      </p>
      <p class="text-gray-600 text-sm">
        {role}{company && ` at ${company}`}
      </p>
    </div>
  </div>

  <!-- Slot for additional content -->
  <div class="mt-4">
    <slot />
  </div>
</article>

<style>
  /* Ensure consistent card height in grid layouts */
  article {
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  /* Testimonial content takes up available space */
  article > div:nth-child(2) {
    flex: 1;
  }

  /* Quote icon positioning */
  svg[class*="w-10"] {
    transform: scaleX(-1);
  }

  /* Smooth hover effect */
  article:hover {
    transform: translateY(-2px);
  }

  /* Profile image fallback styling */
  .w-14.h-14 {
    min-width: 3.5rem;
    min-height: 3.5rem;
  }
</style>
