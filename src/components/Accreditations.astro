---
/**
 * Accreditations Component
 *
 * Displays company accreditations and trust badges
 * Designed for footer or standalone sections
 */

interface Accreditation {
  icon: string;
  text: string;
}

interface Props {
  variant?: 'horizontal' | 'grid';
  class?: string;
}

const {
  variant = 'horizontal',
  class: className = '',
} = Astro.props;

const accreditations: Accreditation[] = [
  {
    icon: 'shield',
    text: 'Fully Insured'
  },
  {
    icon: 'calendar',
    text: '20+ Years Experience'
  },
  {
    icon: 'hammer',
    text: 'Traditional Craftsmanship'
  },
  {
    icon: 'check',
    text: 'Quality Guaranteed'
  }
];

// Icon SVG paths
const icons: Record<string, string> = {
  shield: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
  calendar: 'M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z',
  hammer: 'M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z',
  check: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z'
};

const containerClass = variant === 'grid'
  ? 'grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6'
  : 'flex flex-wrap justify-center items-center gap-8 lg:gap-12';
---

<div class={`${containerClass} ${className}`}>
  {accreditations.map((accred) => (
    <div class="flex items-center gap-3 group">
      <!-- Icon -->
      <div class="flex-shrink-0 w-12 h-12 bg-coral-100 rounded-full flex items-center justify-center group-hover:bg-coral-200 transition-colors">
        <svg
          class="w-6 h-6 text-coral-600"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d={icons[accred.icon]}
          />
        </svg>
      </div>

      <!-- Text -->
      <div class="flex-1">
        <p class="text-sm font-semibold text-gray-700 group-hover:text-navy-900 transition-colors">
          {accred.text}
        </p>
      </div>

      {/* Checkmark for visual confirmation */}
      <svg
        class="w-5 h-5 text-green-500 flex-shrink-0"
        fill="currentColor"
        viewBox="0 0 20 20"
        aria-label="Verified"
      >
        <path
          fill-rule="evenodd"
          d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
          clip-rule="evenodd"
        />
      </svg>
    </div>
  ))}
</div>

<style>
  /* Smooth transitions for hover effects */
  .group {
    transition: transform 0.2s ease;
  }

  .group:hover {
    transform: translateX(4px);
  }

  /* Ensure consistent sizing */
  .w-12.h-12 {
    min-width: 3rem;
    min-height: 3rem;
  }
</style>
