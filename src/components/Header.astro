---
/**
 * Header Component - Arron Bennett Building Contractors (IMPROVED)
 *
 * Improvements made:
 * - Fixed logo background blend mode for white background
 * - Improved container max-width for larger screens (1400px)
 * - Enhanced phone number hover state with coral color
 * - Added logo hover feedback
 * - Improved mobile menu transitions
 * - Enhanced focus states for better accessibility
 * - Fixed header height for consistency
 * - Better navigation spacing at all breakpoints
 * - Added smooth transitions throughout
 * - Optimized logo with Astro Image component for AVIF/WebP conversion
 * - Added Astro View Transitions support for mobile menu
 */

import { Image } from 'astro:assets';
import logoImage from '../assets/images/logo.png';

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;

const navLinks = [
  { label: 'HOME', href: '/' },
  { label: 'ABOUT US', href: '/about-us' },
  { label: 'OUR SERVICES', href: '/services' },
  { label: 'OUR PROJECTS', href: '/our-projects' },
  { label: 'CONTACT US', href: '/contact-us' },
];

const phoneNumber = '07773 463383';
---

<header class={`page-header ${className}`}>
  <div class="page-header-inner">
    <div class="container">
      <div class="header-wrap">
        <!-- Logo Section -->
        <div class="branding">
          <a href="/" class="branding-logo" aria-label="Arron Bennett Building Contractors home">
            <Image
              src={logoImage}
              alt="Arron Bennett Building Contractors"
              class="logo-image"
              width={180}
              height={107}
              loading="eager"
              format="avif"
              quality={90}
              densities={[1, 2]}
            />
          </a>
        </div>

        <!-- Center Navigation -->
        <nav class="navigation page-navigation" aria-label="Main navigation">
          <ul class="menu-container">
            {navLinks.map((link) => (
              <li class="menu-item">
                <a href={link.href}>
                  <div class="menu-item-wrap">
                    <span class="menu-item-title">{link.label}</span>
                  </div>
                </a>
              </li>
            ))}
          </ul>
        </nav>

        <!-- Phone Number Section -->
        <div class="header-info">
          <div class="header-info-item">
            <div class="info-icon">
              <svg
                width="18"
                height="18"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                aria-hidden="true"
              >
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
              </svg>
            </div>
            <div class="info-content">
              <a href={`tel:${phoneNumber.replace(/\s/g, '')}`} class="info-sub-text" aria-label={`Call ${phoneNumber}`}>
                {phoneNumber}
              </a>
            </div>
          </div>
        </div>

        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-button"
          class="page-open-mobile-menu"
          aria-label="Toggle mobile menu"
          aria-expanded="false"
          aria-controls="mobile-menu"
        >
          <div class="inner">
            <div class="icon">
              <span></span>
              <span></span>
              <span></span>
            </div>
          </div>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="mobile-menu" hidden>
    <nav aria-label="Mobile navigation">
      <ul class="mobile-menu-list">
        {navLinks.map((link) => (
          <li>
            <a href={link.href}>{link.label}</a>
          </li>
        ))}
      </ul>
      <div class="mobile-phone">
        <a href={`tel:${phoneNumber.replace(/\s/g, '')}`} aria-label={`Call ${phoneNumber}`}>
          <svg
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            aria-hidden="true"
          >
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
          </svg>
          {phoneNumber}
        </a>
      </div>
    </nav>
  </div>
</header>

<style>
  /* Header Container - Sticky Positioning */
  .page-header {
    position: sticky;
    top: 0;
    width: 100%;
    z-index: 1000;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  .page-header-inner {
    background-color: #1A2D4D;
    padding: 0;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .header-wrap {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 80px;
    gap: 40px;
  }

  /* Logo Section - Enhanced with hover and blend mode fix */
  .branding {
    flex-shrink: 0;
  }

  .branding-logo {
    display: block;
    line-height: 0;
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  .branding-logo:hover {
    opacity: 0.9;
    transform: scale(1.02);
  }

  .branding-logo:focus-visible {
    outline: 3px solid #A83820;
    outline-offset: 6px;
    border-radius: 4px;
  }

  .logo-image {
    height: auto;
    max-height: 70px;
    width: auto;
    display: block;
  }

  /* Navigation */
  .navigation {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .menu-container {
    display: flex;
    align-items: center;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 0;
  }

  .menu-item {
    margin: 0;
  }

  .menu-item a {
    display: block;
    padding: 28px 16px;
    color: white;
    text-decoration: none;
    font-family: 'Roboto', sans-serif;
    font-size: 16px;
    font-weight: 600;
    letter-spacing: 0.3px;
    line-height: 1.26;
    text-transform: none;
    transition: color 0.3s ease, background-color 0.3s ease;
    position: relative;
  }

  .menu-item a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%) scaleX(0);
    width: 80%;
    height: 3px;
    background-color: #A83820;
    transition: transform 0.3s ease;
  }

  .menu-item a:hover::after,
  .menu-item a:focus::after {
    transform: translateX(-50%) scaleX(1);
  }

  .menu-item a:hover,
  .menu-item a:focus {
    color: #A83820;
  }

  .menu-item a:focus-visible {
    outline: 2px solid #A83820;
    outline-offset: 4px;
    border-radius: 2px;
  }

  .menu-item-wrap {
    display: flex;
    align-items: center;
  }

  .menu-item-title {
    display: block;
  }

  /* Phone Number Section - Enhanced hover with coral color */
  .header-info {
    flex-shrink: 0;
    display: flex;
    align-items: center;
  }

  .header-info-item {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 10px 16px;
    border-radius: 6px;
    transition: background-color 0.3s ease;
  }

  .header-info-item:hover {
    background-color: rgba(255, 255, 255, 0.08);
  }

  .info-icon {
    color: #A83820;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease;
  }

  .header-info-item:hover .info-icon {
    transform: scale(1.1) rotate(5deg);
  }

  .info-icon svg {
    width: 20px;
    height: 20px;
  }

  .info-content {
    display: flex;
    flex-direction: column;
  }

  .info-sub-text {
    color: white;
    font-size: 17px;
    font-weight: 700;
    text-decoration: none;
    transition: color 0.3s ease;
    letter-spacing: 0.5px;
  }

  .info-sub-text:hover,
  .info-sub-text:focus {
    color: #A83820;
  }

  .info-sub-text:focus-visible {
    outline: 2px solid #A83820;
    outline-offset: 4px;
    border-radius: 2px;
  }

  /* Mobile Menu Button - Enhanced styling */
  .page-open-mobile-menu {
    display: none;
    background: none;
    border: none;
    padding: 10px;
    cursor: pointer;
    flex-direction: column;
    gap: 5px;
    min-width: 44px;
    min-height: 44px;
    border-radius: 4px;
    transition: background-color 0.3s ease;
  }

  .page-open-mobile-menu:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }

  .page-open-mobile-menu:focus-visible {
    outline: 3px solid #A83820;
    outline-offset: 4px;
    border-radius: 4px;
  }

  .page-open-mobile-menu .icon {
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  .page-open-mobile-menu .icon span {
    display: block;
    width: 28px;
    height: 3px;
    background-color: white;
    border-radius: 2px;
    transition: all 0.3s ease;
  }

  .page-open-mobile-menu:hover .icon span {
    background-color: #A83820;
  }

  .page-open-mobile-menu[aria-expanded="true"] .icon span:nth-child(1) {
    transform: rotate(45deg) translate(7px, 7px);
  }

  .page-open-mobile-menu[aria-expanded="true"] .icon span:nth-child(2) {
    opacity: 0;
    transform: translateX(20px);
  }

  .page-open-mobile-menu[aria-expanded="true"] .icon span:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -7px);
  }

  /* Mobile Menu - Enhanced with smooth transitions */
  .mobile-menu {
    display: none;
    background-color: #1A2D4D;
    padding: 20px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    animation: slideDown 0.3s ease;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .mobile-menu[hidden] {
    display: none;
  }

  .mobile-menu-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .mobile-menu-list li {
    margin: 0;
  }

  .mobile-menu-list a {
    display: block;
    padding: 16px 20px;
    color: white;
    text-decoration: none;
    font-size: 16px;
    font-weight: 600;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
    border-radius: 4px;
  }

  .mobile-menu-list a:hover,
  .mobile-menu-list a:focus {
    background-color: rgba(242, 122, 94, 0.1);
    color: #A83820;
    padding-left: 28px;
  }

  .mobile-menu-list a:focus-visible {
    outline: 2px solid #A83820;
    outline-offset: -2px;
  }

  .mobile-phone {
    padding: 24px 20px 4px;
    text-align: center;
  }

  .mobile-phone a {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    color: white;
    text-decoration: none;
    font-size: 18px;
    font-weight: 700;
    padding: 14px 28px;
    border: 2px solid #A83820;
    background-color: #A83820;
    border-radius: 6px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 8px rgba(242, 122, 94, 0.3);
  }

  .mobile-phone a:hover,
  .mobile-phone a:focus {
    background-color: white;
    color: #1A2D4D;
    border-color: white;
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(242, 122, 94, 0.4);
  }

  .mobile-phone a:focus-visible {
    outline: 3px solid #A83820;
    outline-offset: 4px;
  }

  .mobile-phone svg {
    width: 20px;
    height: 20px;
  }

  /* Responsive Design */
  @media (max-width: 1200px) {
    .header-wrap {
      gap: 30px;
    }

    .menu-item a {
      padding: 28px 12px;
      font-size: 15px;
    }
  }

  @media (max-width: 1024px) {
    .header-wrap {
      gap: 20px;
    }

    .menu-item a {
      padding: 28px 10px;
      font-size: 14px;
    }

    .logo-image {
      max-height: 60px;
    }
  }

  @media (max-width: 768px) {
    .navigation,
    .header-info {
      display: none;
    }

    .page-open-mobile-menu {
      display: flex;
    }

    .mobile-menu:not([hidden]) {
      display: block;
    }

    .header-wrap {
      height: 60px;
    }

    .logo-image {
      max-height: 50px;
    }
  }
</style>

<script>
  // Mobile menu toggle functionality with View Transitions support
  // Following Astro's official View Transitions documentation pattern

  // Store references to event listeners for cleanup
  let menuButtonClickHandler = null;
  let menuKeydownHandler = null;
  let documentClickHandler = null;
  let documentKeydownHandler = null;

  // Cleanup function to remove all event listeners
  const cleanupEventListeners = () => {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (mobileMenuButton && menuButtonClickHandler) {
      mobileMenuButton.removeEventListener('click', menuButtonClickHandler);
      menuButtonClickHandler = null;
    }

    if (mobileMenu && menuKeydownHandler) {
      mobileMenu.removeEventListener('keydown', menuKeydownHandler);
      menuKeydownHandler = null;
    }

    if (documentClickHandler) {
      document.removeEventListener('click', documentClickHandler);
      documentClickHandler = null;
    }

    if (documentKeydownHandler) {
      document.removeEventListener('keydown', documentKeydownHandler);
      documentKeydownHandler = null;
    }
  };

  document.addEventListener('astro:page-load', () => {
    // Clean up any existing event listeners first
    cleanupEventListeners();

    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (!mobileMenuButton || !mobileMenu) return;

    // Get all focusable elements in mobile menu
    const getFocusableElements = () => {
      return mobileMenu.querySelectorAll(
        'a[href], button:not([disabled]), textarea:not([disabled]), input:not([disabled]), select:not([disabled])'
      );
    };

    // Toggle menu function
    const toggleMenu = () => {
      const isHidden = mobileMenu.hasAttribute('hidden');

      if (isHidden) {
        mobileMenu.removeAttribute('hidden');
        mobileMenuButton.setAttribute('aria-expanded', 'true');

        // Focus first link in menu after animation
        setTimeout(() => {
          const focusableElements = getFocusableElements();
          if (focusableElements.length > 0) {
            focusableElements[0].focus();
          }
        }, 100);
      } else {
        mobileMenu.setAttribute('hidden', '');
        mobileMenuButton.setAttribute('aria-expanded', 'false');
      }
    };

    // Create event handler functions and store references
    menuButtonClickHandler = toggleMenu;

    // Focus trap in mobile menu
    menuKeydownHandler = (event) => {
      if (event.key === 'Tab' && !mobileMenu.hasAttribute('hidden')) {
        const focusableElements = Array.from(getFocusableElements());
        const firstElement = focusableElements[0];
        const lastElement = focusableElements[focusableElements.length - 1];

        if (event.shiftKey) {
          // Shift + Tab
          if (document.activeElement === firstElement) {
            event.preventDefault();
            lastElement.focus();
          }
        } else {
          // Tab
          if (document.activeElement === lastElement) {
            event.preventDefault();
            firstElement.focus();
          }
        }
      }
    };

    // Close menu when clicking outside
    documentClickHandler = (event) => {
      if (
        !mobileMenuButton.contains(event.target) &&
        !mobileMenu.contains(event.target) &&
        !mobileMenu.hasAttribute('hidden')
      ) {
        mobileMenu.setAttribute('hidden', '');
        mobileMenuButton.setAttribute('aria-expanded', 'false');
      }
    };

    // Close menu on ESC key
    documentKeydownHandler = (event) => {
      if (event.key === 'Escape' && !mobileMenu.hasAttribute('hidden')) {
        mobileMenu.setAttribute('hidden', '');
        mobileMenuButton.setAttribute('aria-expanded', 'false');
        mobileMenuButton.focus();
      }
    };

    // Add event listeners with stored references
    mobileMenuButton.addEventListener('click', menuButtonClickHandler);
    mobileMenu.addEventListener('keydown', menuKeydownHandler);
    document.addEventListener('click', documentClickHandler);
    document.addEventListener('keydown', documentKeydownHandler);
  });

  // Clean up event listeners before swap to prevent duplication
  document.addEventListener('astro:before-swap', () => {
    // Clean up all event listeners
    cleanupEventListeners();

    // Close menu before navigation to prevent it staying open
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileMenuButton = document.getElementById('mobile-menu-button');

    if (mobileMenu && mobileMenuButton) {
      mobileMenu.setAttribute('hidden', '');
      mobileMenuButton.setAttribute('aria-expanded', 'false');
    }
  });
</script>
