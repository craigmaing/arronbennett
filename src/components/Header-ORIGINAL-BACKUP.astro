---
/**
 * Header Component - Arron Bennett Building Contractors
 *
 * Exact replication of original site header:
 * - Dark navy background (#021f59)
 * - Logo: 180x107px at left
 * - Centered navigation (Roboto 16px)
 * - Phone number with icon on right
 * - Sticky positioning
 * - Coral hover (#F27A5E)
 * - Height: 80px desktop, 60px mobile
 */

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;

const navLinks = [
  { label: 'HOME', href: '/' },
  { label: 'ABOUT US', href: '/about-us' },
  { label: 'OUR SERVICES', href: '/our-services' },
  { label: 'OUR PROJECTS', href: '/our-projects' },
  { label: 'WORK GALLERY', href: '/work-gallery' },
  { label: 'CONTACT US', href: '/contact-us' },
];

const phoneNumber = '07773 463383';
---

<header class={`page-header ${className}`}>
  <div class="page-header-inner">
    <div class="container">
      <div class="header-wrap">
        <!-- Logo Section -->
        <div class="branding">
          <a href="/" class="branding-logo" aria-label="Arron Bennett Building Contractors home">
            <img
              src="/images/logo/ab-building-contractor-1.jpg"
              alt="Arron Bennett"
              class="logo-image"
              width="180"
              height="107"
            />
          </a>
        </div>

        <!-- Center Navigation -->
        <nav class="navigation page-navigation" aria-label="Main navigation">
          <ul class="menu-container">
            {navLinks.map((link) => (
              <li class="menu-item">
                <a href={link.href}>
                  <div class="menu-item-wrap">
                    <span class="menu-item-title">{link.label}</span>
                  </div>
                </a>
              </li>
            ))}
          </ul>
        </nav>

        <!-- Phone Number Section -->
        <div class="header-info">
          <div class="header-info-item">
            <div class="info-icon">
              <svg
                width="18"
                height="18"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                aria-hidden="true"
              >
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
              </svg>
            </div>
            <div class="info-content">
              <a href={`tel:${phoneNumber.replace(/\s/g, '')}`} class="info-sub-text" aria-label={`Call ${phoneNumber}`}>
                {phoneNumber}
              </a>
            </div>
          </div>
        </div>

        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-button"
          class="page-open-mobile-menu"
          aria-label="Toggle mobile menu"
          aria-expanded="false"
          aria-controls="mobile-menu"
        >
          <div class="inner">
            <div class="icon">
              <span></span>
              <span></span>
              <span></span>
            </div>
          </div>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="mobile-menu" hidden>
    <nav aria-label="Mobile navigation">
      <ul class="mobile-menu-list">
        {navLinks.map((link) => (
          <li>
            <a href={link.href}>{link.label}</a>
          </li>
        ))}
      </ul>
      <div class="mobile-phone">
        <a href={`tel:${phoneNumber.replace(/\s/g, '')}`} aria-label={`Call ${phoneNumber}`}>
          <svg
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            aria-hidden="true"
          >
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
          </svg>
          {phoneNumber}
        </a>
      </div>
    </nav>
  </div>
</header>

<style>
  /* Header Container - Sticky Positioning */
  .page-header {
    position: sticky;
    top: 0;
    width: 100%;
    z-index: 1000;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  .page-header-inner {
    background-color: #021f59;
    padding: 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .header-wrap {
    display: flex;
    align-items: center;
    justify-content: space-between;
    min-height: 80px;
    gap: 40px;
  }

  /* Logo Section - 180x107px */
  .branding {
    flex-shrink: 0;
  }

  .branding-logo {
    display: block;
    line-height: 0;
  }

  .logo-image {
    height: auto;
    max-height: 80px;
    width: auto;
    display: block;
  }

  /* Navigation */
  .navigation {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .menu-container {
    display: flex;
    align-items: center;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 0;
  }

  .menu-item {
    margin: 0;
  }

  .menu-item a {
    display: block;
    padding: 25px 14px;
    color: #ffffff;
    text-decoration: none;
    font-family: 'Roboto', sans-serif;
    font-size: 16px;
    font-weight: 600;
    letter-spacing: 0;
    line-height: 1.26;
    text-transform: none;
    transition: color 0.3s ease;
  }

  .menu-item a:hover,
  .menu-item a:focus {
    color: #F27A5E;
  }

  .menu-item a:focus-visible {
    outline: 2px solid #F27A5E;
    outline-offset: 4px;
    border-radius: 2px;
  }

  .menu-item-wrap {
    display: flex;
    align-items: center;
  }

  .menu-item-title {
    display: block;
  }

  /* Phone Number Section */
  .header-info {
    flex-shrink: 0;
    display: flex;
    align-items: center;
  }

  .header-info-item {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .info-icon {
    color: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .info-icon svg {
    width: 18px;
    height: 18px;
  }

  .info-content {
    display: flex;
    flex-direction: column;
  }

  .info-sub-text {
    color: #ffffff;
    font-size: 16px;
    font-weight: 600;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .info-sub-text:hover,
  .info-sub-text:focus {
    color: rgba(255, 255, 255, 0.8);
  }

  .info-sub-text:focus-visible {
    outline: 2px solid #F27A5E;
    outline-offset: 4px;
    border-radius: 2px;
  }

  /* Mobile Menu Button */
  .page-open-mobile-menu {
    display: none;
    background: none;
    border: none;
    padding: 10px;
    cursor: pointer;
    flex-direction: column;
    gap: 5px;
    min-width: 44px;
    min-height: 44px;
  }

  .page-open-mobile-menu:focus-visible {
    outline: 2px solid #F27A5E;
    outline-offset: 4px;
    border-radius: 4px;
  }

  .page-open-mobile-menu .icon {
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  .page-open-mobile-menu .icon span {
    display: block;
    width: 25px;
    height: 3px;
    background-color: #ffffff;
    transition: all 0.3s ease;
  }

  /* Mobile Menu */
  .mobile-menu {
    display: none;
    background-color: #021f59;
    padding: 20px;
  }

  .mobile-menu[hidden] {
    display: none;
  }

  .mobile-menu-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .mobile-menu-list li {
    margin: 0;
  }

  .mobile-menu-list a {
    display: block;
    padding: 15px 20px;
    color: #ffffff;
    text-decoration: none;
    font-size: 16px;
    font-weight: 600;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    transition: background-color 0.3s ease;
  }

  .mobile-menu-list a:hover,
  .mobile-menu-list a:focus {
    background-color: rgba(255, 255, 255, 0.05);
  }

  .mobile-menu-list a:focus-visible {
    outline: 2px solid #F27A5E;
    outline-offset: -2px;
  }

  .mobile-phone {
    padding: 20px;
    text-align: center;
  }

  .mobile-phone a {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    color: #ffffff;
    text-decoration: none;
    font-size: 18px;
    font-weight: 600;
    padding: 12px 24px;
    border: 2px solid #ffffff;
    border-radius: 4px;
    transition: all 0.3s ease;
  }

  .mobile-phone a:hover,
  .mobile-phone a:focus {
    background-color: #ffffff;
    color: #021f59;
  }

  .mobile-phone a:focus-visible {
    outline: 2px solid #F27A5E;
    outline-offset: 4px;
  }

  .mobile-phone svg {
    width: 18px;
    height: 18px;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .header-wrap {
      gap: 20px;
    }

    .menu-item a {
      padding: 25px 10px;
      font-size: 14px;
    }
  }

  @media (max-width: 768px) {
    .navigation,
    .header-info {
      display: none;
    }

    .page-open-mobile-menu {
      display: flex;
    }

    .mobile-menu:not([hidden]) {
      display: block;
    }

    .header-wrap {
      min-height: 60px;
    }

    .logo-image {
      max-height: 50px;
    }
  }
</style>

<script>
  // Mobile menu toggle functionality with focus trap
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuButton && mobileMenu) {
    // Get all focusable elements in mobile menu
    const getFocusableElements = () => {
      return mobileMenu.querySelectorAll(
        'a[href], button:not([disabled]), textarea:not([disabled]), input:not([disabled]), select:not([disabled])'
      );
    };

    mobileMenuButton.addEventListener('click', () => {
      const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
      const isHidden = mobileMenu.hasAttribute('hidden');

      if (isHidden) {
        mobileMenu.removeAttribute('hidden');
        mobileMenuButton.setAttribute('aria-expanded', 'true');

        // Focus first link in menu
        const focusableElements = getFocusableElements();
        if (focusableElements.length > 0) {
          (focusableElements[0] as HTMLElement).focus();
        }
      } else {
        mobileMenu.setAttribute('hidden', '');
        mobileMenuButton.setAttribute('aria-expanded', 'false');
      }
    });

    // Focus trap in mobile menu
    mobileMenu.addEventListener('keydown', (event) => {
      if (event.key === 'Tab' && !mobileMenu.hasAttribute('hidden')) {
        const focusableElements = Array.from(getFocusableElements()) as HTMLElement[];
        const firstElement = focusableElements[0];
        const lastElement = focusableElements[focusableElements.length - 1];

        if (event.shiftKey) {
          // Shift + Tab
          if (document.activeElement === firstElement) {
            event.preventDefault();
            lastElement.focus();
          }
        } else {
          // Tab
          if (document.activeElement === lastElement) {
            event.preventDefault();
            firstElement.focus();
          }
        }
      }
    });

    // Close menu when clicking outside
    document.addEventListener('click', (event) => {
      const target = event.target as HTMLElement;
      if (
        !mobileMenuButton.contains(target) &&
        !mobileMenu.contains(target) &&
        !mobileMenu.hasAttribute('hidden')
      ) {
        mobileMenu.setAttribute('hidden', '');
        mobileMenuButton.setAttribute('aria-expanded', 'false');
      }
    });

    // Close menu on ESC key
    document.addEventListener('keydown', (event) => {
      if (event.key === 'Escape' && !mobileMenu.hasAttribute('hidden')) {
        mobileMenu.setAttribute('hidden', '');
        mobileMenuButton.setAttribute('aria-expanded', 'false');
        mobileMenuButton.focus();
      }
    });
  }
</script>
