---
/**
 * Services Page - Arron Bennett Building Contractors
 * URL: /services
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import { services } from '../data/services.ts';
import { getProjectImage } from '../data/imageRegistry';
import ServicesPageSchema from '../components/schema/ServicesPageSchema.astro';
import Button from '../components/Button.astro';

// Sort services by featured status and then by title
const sortedServices = services.sort((a, b) => {
  if (a.featured && !b.featured) return -1;
  if (!a.featured && b.featured) return 1;
  return a.title.localeCompare(b.title);
});

// Page metadata
const pageTitle = "Building Services Roseland Peninsula | Arron Bennett";
const pageDescription = "Comprehensive construction services from traditional stone masonry to modern renewable heating systems. Quality craftsmanship backed by over 20 years of experience.";
const canonicalURL = new URL('/services', Astro.site);
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  canonicalURL={canonicalURL.toString()}
>
  <!-- Hero Section -->
  <section
    class="relative h-[70vh] flex items-center justify-center overflow-hidden"
    aria-label="Services hero banner"
  >
    <Image
      src={getProjectImage('A-Bennett-81.jpg')}
      alt="Expert stone masonry and building services in Cornwall showcasing traditional craftsmanship by Arron Bennett Building"
      class="absolute inset-0 w-full h-full object-cover"
      widths={[640, 750, 828, 1080, 1200]}
      sizes="100vw"
      loading="eager"
      format="avif"
    />
    <div class="absolute inset-0" style="background-color: rgba(26, 45, 77, 0.75);"></div>
    <div class="relative z-10 container mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
        Building Services in Cornwall & Devon
      </h1>
      <p class="text-xl md:text-2xl text-white/90 max-w-3xl mx-auto">
        Comprehensive construction services backed by over 20 years of experience
      </p>
    </div>
  </section>

  <!-- Services Grid Section -->
  <section class="services-section">
    <div class="container">
      <div class="section-intro">
        <h2>Expert Building Services</h2>
        <p>From full builds and renovations to specialist stone masonry and lime works, we offer a comprehensive range of building services tailored to Cornwall and Devon's unique architectural heritage.</p>
      </div>

      <div class="services-grid">
        {sortedServices.map((service) => (
          <article class="service-card">
            {service.image && (
              <Image
                src={service.image}
                alt={service.title}
                class="service-image"
                width={400}
                height={250}
                loading="lazy"
                format="avif"
              />
            )}
            <div class="service-content">
              <h3>{service.title}</h3>
              <p class="service-description">{service.description}</p>

              {service.features && service.features.length > 0 && (
                <ul class="service-features">
                  {service.features.slice(0, 4).map((feature) => (
                    <li>{feature}</li>
                  ))}
                </ul>
              )}

              <Button href="/contact-us" variant="primary" size="md" class="text-sm uppercase tracking-wider">Discuss This Project</Button>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="process-section">
    <div class="container">
      <div class="section-intro">
        <h2>How We Work</h2>
        <p>Our collaborative approach ensures your project runs smoothly from initial consultation to final handover.</p>
      </div>

      <div class="process-grid">
        <div class="process-step">
          <div class="process-number">1</div>
          <h3>Consultation</h3>
          <p>Understanding your vision, requirements, and budget to provide honest advice and accurate estimates.</p>
        </div>

        <div class="process-step">
          <div class="process-number">2</div>
          <h3>Planning</h3>
          <p>Detailed project planning, design coordination, and liaising with architects, engineers, and building control.</p>
        </div>

        <div class="process-step">
          <div class="process-number">3</div>
          <h3>Execution</h3>
          <p>Professional construction with regular updates, quality control, and seamless coordination of all trades.</p>
        </div>

        <div class="process-step">
          <div class="process-number">4</div>
          <h3>Completion</h3>
          <p>Final inspections, snagging, and handover with full documentation and aftercare support.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Projects Showcase CTA -->
  <section class="projects-showcase-section">
    <div class="container">
      <div class="section-intro">
        <h2>See Our Work in Action</h2>
        <p>Browse our portfolio of completed projects across the Roseland Peninsula to see the quality of our craftsmanship.</p>
      </div>
      <div style="text-align: center; margin-top: 30px;">
        <Button href="/our-projects" variant="secondary" size="lg">View Our Projects</Button>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <h2>Ready to Discuss Your Project?</h2>
      <p>Get in touch today for a free consultation and no-obligation quote.</p>
      <div class="cta-buttons">
        <Button href="tel:07773463383" variant="ghost" size="lg" class="min-w-[200px] !border-white !text-white hover:!bg-white hover:!text-coral-500">Call 07773 463383</Button>
        <Button href="/contact-us" variant="secondary" size="lg" class="min-w-[200px]">Send Enquiry</Button>
      </div>
    </div>
  </section>

  <!-- Comprehensive Schema.org Structured Data -->
  <ServicesPageSchema
    pageUrl="/services"
    pageTitle={pageTitle}
    pageDescription={pageDescription}
    siteUrl={Astro.site?.toString()}
  />
</BaseLayout>

<style>
  /* Breadcrumb Section */
  .breadcrumb-section {
    background: #f8f9fa;
    padding: 20px 0;
    border-bottom: 1px solid #e9ecef;
  }

  .breadcrumb-section .container {
    max-width: 1170px;
    margin: 0 auto;
    padding: 0 15px;
  }

  .breadcrumb ol {
    display: flex;
    list-style: none;
    padding: 0;
    margin: 0;
    font-size: 14px;
    color: #6c757d;
  }

  .breadcrumb li {
    margin-right: 8px;
  }

  .breadcrumb a {
    color: #007bff;
    text-decoration: none;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  /* Services Grid */
  .services-section {
    padding: 80px 0;
    background: #ffffff; /* White section */
  }

  .services-section .container {
    max-width: 1170px;
    margin: 0 auto;
    padding: 0 15px;
  }

  /* Projects Showcase CTA */
  .projects-showcase-section {
    padding: 80px 0;
    background: #F0EAD6; /* Eggshell section */
  }

  .projects-showcase-section .container {
    max-width: 1170px;
    margin: 0 auto;
    padding: 0 15px;
  }

  .section-intro {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 60px;
  }

  .section-intro h2 {
    font-size: 36px;
    font-weight: 700;
    color: #1A2D4D;
    margin: 0 0 20px 0;
  }

  .section-intro p {
    font-size: 18px;
    color: #6c757d;
    line-height: 1.8;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 40px;
    margin-bottom: 40px;
  }

  .service-card {
    background: white;
    border: 1px solid #e9ecef;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s, box-shadow 0.3s;
    display: flex;
    flex-direction: column;
  }

  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.12);
  }

  .service-image {
    width: 100%;
    height: 250px;
    object-fit: cover;
    background: #f8f9fa;
  }

  .service-content {
    padding: 30px;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .service-card h3 {
    font-size: 24px;
    color: #1A2D4D;
    margin: 0 0 15px 0;
    line-height: 1.3;
    font-weight: 700;
  }

  .service-description {
    color: #666666;
    margin-bottom: 20px;
    line-height: 1.7;
    flex: 1;
    font-size: 16px;
  }

  .service-features {
    list-style: none;
    margin: 0 0 25px 0;
    padding: 0;
  }

  .service-features li {
    padding: 8px 0;
    padding-left: 30px;
    position: relative;
    color: #666666;
    font-size: 15px;
  }

  .service-features li::before {
    content: "âœ“";
    position: absolute;
    left: 0;
    color: #A83820;
    font-weight: bold;
    font-size: 18px;
  }

  .btn {
    display: inline-block;
    padding: 14px 32px;
    background: #A83820;
    color: white;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 600;
    text-align: center;
    transition: all 0.3s;
    border: none;
    cursor: pointer;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .btn:hover {
    background: #A83820;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(242, 122, 94, 0.3);
  }

  .btn-primary {
    background: #1A2D4D;
  }

  .btn-primary:hover {
    background: #2d4a6b;
  }

  /* Process Section */
  .process-section {
    background: #F0EAD6; /* Eggshell section */
    padding: 80px 0;
  }

  .process-section .container {
    max-width: 1170px;
    margin: 0 auto;
    padding: 0 15px;
  }

  .process-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 40px;
    margin-top: 50px;
  }

  .process-step {
    text-align: center;
    padding: 2.5rem;
    background: linear-gradient(135deg, #ffffff 0%, #F0EAD6 100%);
    border-radius: 12px;
    border-top: 4px solid #A83820;
    box-shadow:
      0 10px 30px rgba(26, 45, 77, 0.1),
      0 1px 8px rgba(26, 45, 77, 0.06);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .process-step::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(168, 56, 32, 0.05) 0%, transparent 70%);
    pointer-events: none;
    transition: transform 0.6s ease;
  }

  .process-step:hover {
    transform: translateY(-4px);
    box-shadow:
      0 15px 40px rgba(26, 45, 77, 0.15),
      0 5px 15px rgba(26, 45, 77, 0.08);
    border-top-color: #1A2D4D;
  }

  .process-step:hover::before {
    transform: translate(-10%, -10%);
  }

  .process-number {
    width: 80px;
    height: 80px;
    background: #1A2D4D;
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32px;
    font-weight: 700;
    margin: 0 auto 1.5rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px rgba(26, 45, 77, 0.2);
  }

  .process-step:hover .process-number {
    background: #A83820;
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 6px 20px rgba(168, 56, 32, 0.3);
  }

  .process-step h3 {
    color: #1A2D4D;
    margin-bottom: 1rem;
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1.3;
  }

  .process-step p {
    color: #2D3748; /* WCAG AA compliant - 4.5:1 contrast ratio */
    line-height: 1.7;
    font-size: 1rem;
  }

  /* CTA Section */
  .cta-section {
    background: #1A2D4D;
    color: white;
    padding: 80px 0;
    text-align: center;
  }

  .cta-section .container {
    max-width: 1170px;
    margin: 0 auto;
    padding: 0 15px;
  }

  .cta-section h2 {
    font-size: 36px;
    font-weight: 700;
    margin: 0 0 20px 0;
  }

  .cta-section p {
    font-size: 18px;
    margin: 0 0 30px 0;
    opacity: 0.9;
  }

  .cta-buttons {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .cta-buttons .btn {
    min-width: 200px;
  }

  /* Responsive */
  @media (max-width: 991px) {
    .services-grid {
      grid-template-columns: 1fr;
    }

    .process-grid {
      grid-template-columns: 1fr;
    }

    .breadcrumb-section h1 {
      font-size: 36px;
    }

    .section-intro h2,
    .cta-section h2 {
      font-size: 32px;
    }
  }

  @media (max-width: 767px) {
    .breadcrumb-section {
      padding: 30px 0;
    }

    .breadcrumb-section h1 {
      font-size: 28px;
    }

    .services-section,
    .process-section,
    .cta-section {
      padding: 50px 0;
    }

    .section-intro h2,
    .cta-section h2 {
      font-size: 28px;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }

    .cta-buttons .btn {
      width: 100%;
      max-width: 300px;
    }
  }
</style>
