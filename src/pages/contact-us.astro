---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactCard from '../components/ContactCard.astro';
import ContactForm from '../components/ContactForm.astro';

const pageTitle = "Contact Arron Bennett - Cornwall Builders";
const pageDescription = "Need expert building services in Cornwall? Get in touch with Arron Bennett Building for reliable construction and renovation services throughout Cornwall and Devon.";

const schema = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  "name": pageTitle,
  "description": pageDescription,
  "mainEntity": {
    "@type": "LocalBusiness",
    "name": "Arron Bennett Building Contractors",
    "@id": "https://www.arronbennettbuilding.co.uk",
    "telephone": "07773 463383",
    "email": "enquiries@arronbennettbuilding.co.uk",
    "address": {
      "@type": "PostalAddress",
      "addressRegion": "Cornwall",
      "addressCountry": "GB"
    },
    "areaServed": [
      {"@type": "Place", "name": "Cornwall"},
      {"@type": "Place", "name": "Devon"}
    ],
    "priceRange": "¬£¬£"
  }
};
---

<BaseLayout title={pageTitle} description={pageDescription} schema={schema}>
  <main id="main-content" class="min-h-screen">
    
    <section
      class="hero bg-gradient-to-br from-blue-600 to-blue-800 text-white py-20 px-4"
      aria-label="Contact page introduction"
      role="region"
    >
      <div class="max-w-6xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 focus-visible:outline-4 focus-visible:outline-offset-4 focus-visible:outline-white">
          Get in Touch
        </h1>
        <p class="text-xl md:text-2xl text-blue-50 max-w-3xl mx-auto leading-relaxed">
          Let's discuss your building project and how we can bring your vision to life
        </p>
      </div>
    </section>

    <section class="py-12 px-4 bg-gray-50">
      <div class="max-w-4xl mx-auto text-center">
        <p class="text-lg text-gray-700 leading-relaxed">
          Need expert building services in Cornwall? Arron Bennett Building offers reliable construction 
          and renovation services throughout Cornwall and Devon. We provide comprehensive services including 
          extensions, renovations, and new builds with 20+ years of experience.
        </p>
      </div>
    </section>

    <section class="py-16 px-4 bg-white">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 text-gray-900">
          Contact Information
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <ContactCard
            title="Call us"
            icon="phone"
            content="07773 463383"
            link="tel:07773463383"
          />
          
          <ContactCard
            title="Email Us"
            icon="email"
            content="enquiries@arronbennettbuilding.co.uk"
            link="mailto:enquiries@arronbennettbuilding.co.uk"
          />
          
          <ContactCard
            title="Location"
            icon="location"
            content="Cornwall / Devon"
          />
        </div>
      </div>
    </section>

    <section class="py-16 px-4 bg-gray-50">
      <div class="max-w-3xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold mb-4 text-gray-900">
            Send Us a Message
          </h2>
          <p class="text-lg text-gray-600">
            Fill out the form below and we'll get back to you within 24 hours
          </p>
        </div>
        
        <ContactForm />
      </div>
    </section>

    <section class="py-16 px-4 bg-white">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-12 text-gray-900">
          Why Choose Us?
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="text-center p-6">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4 text-3xl">
              ‚è±Ô∏è
            </div>
            <h3 class="text-xl font-semibold mb-2 text-gray-900">Quick Response</h3>
            <p class="text-gray-600">We respond to all inquiries within 24 hours</p>
          </div>

          <div class="text-center p-6">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4 text-3xl">
              ‚úì
            </div>
            <h3 class="text-xl font-semibold mb-2 text-gray-900">Free Consultation</h3>
            <p class="text-gray-600">Initial consultation and quote at no cost</p>
          </div>

          <div class="text-center p-6">
            <div class="w-16 h-16 bg-yellow-100 rounded-full flex items-center justify-center mx-auto mb-4 text-3xl">
              ‚≠ê
            </div>
            <h3 class="text-xl font-semibold mb-2 text-gray-900">20+ Years Experience</h3>
            <p class="text-gray-600">Proven track record of quality workmanship</p>
          </div>

          <div class="text-center p-6">
            <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4 text-3xl">
              üõ°Ô∏è
            </div>
            <h3 class="text-xl font-semibold mb-2 text-gray-900">Fully Insured</h3>
            <p class="text-gray-600">Complete peace of mind for your project</p>
          </div>
        </div>
      </div>
    </section>

    <section class="py-16 px-4 bg-blue-600 text-white">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          Ready to Start Your Project?
        </h2>
        <p class="text-xl text-blue-100 mb-8">
          Contact us today for a free consultation and quote
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="tel:07773463383"
            class="inline-block bg-white text-blue-600 font-semibold px-8 py-4 rounded-lg hover:bg-blue-50 transition-colors duration-200"
          >
            Call 07773 463383
          </a>
          <a
            href="mailto:enquiries@arronbennettbuilding.co.uk"
            class="inline-block bg-blue-700 text-white font-semibold px-8 py-4 rounded-lg hover:bg-blue-800 transition-colors duration-200"
          >
            Send Email
          </a>
        </div>
      </div>
    </section>

  </main>
</BaseLayout>

<style>
  .hero {
    background-image: linear-gradient(135deg, #2563eb 0%, #1e40af 100%);
  }

  @media (max-width: 640px) {
    .hero {
      padding: 3rem 1rem;
    }

    .hero h1 {
      font-size: 2.25rem;
    }
  }

  /* Ensure excellent color contrast for accessibility */
  .hero p {
    color: rgba(255, 255, 255, 0.95);
  }

  /* Focus visible states for all interactive elements */
  .hero *:focus-visible {
    outline: 3px solid white;
    outline-offset: 4px;
    border-radius: 2px;
  }
</style>
