---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import { getProjectImage } from '../data/imageRegistry';
import { companyInfo } from '../data/company-info';

const pageTitle = "Thank You - Arron Bennett Building";
const pageDescription = "Thank you for contacting Arron Bennett Building. We've received your message and will get back to you within 24 hours.";
const siteUrl = companyInfo.url;

// Schema for conversion/success tracking
const successPageSchema = {
  "@context": "https://schema.org",
  "@type": "ConfirmAction",
  "name": "Contact Form Submission Successful",
  "description": "Thank you for contacting Arron Bennett Building",
  "agent": {
    "@type": "Organization",
    "name": companyInfo.name,
    "url": siteUrl
  }
};
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section
    class="relative h-[70vh] flex items-center justify-center overflow-hidden"
    aria-label="Thank you confirmation"
  >
    <Image
      src={getProjectImage('A-Bennett-169.jpg')}
      alt="Thank you for contacting Arron Bennett Building"
      class="absolute inset-0 w-full h-full object-cover"
      widths={[640, 750, 828, 1080, 1200]}
      sizes="100vw"
      loading="eager"
      format="avif"
    />
    <div class="absolute inset-0" style="background-color: rgba(26, 45, 77, 0.75);"></div>
    <div class="relative z-10 container mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
        Thank You!
      </h1>
      <p class="text-xl md:text-2xl text-white/90 max-w-3xl mx-auto">
        We've received your message
      </p>
    </div>
  </section>

  <!-- Confirmation Section -->
  <section class="py-16 px-4 bg-white">
    <div class="max-w-3xl mx-auto">
      <!-- Success Message -->
      <div class="bg-green-50 border-l-4 border-green-500 p-8 mb-8 rounded-lg shadow-sm">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="ml-4">
            <h2 class="text-2xl font-bold text-green-800 mb-2">
              Your message has been received
            </h2>
            <p class="text-green-700 text-lg">
              Thank you for contacting Arron Bennett Building. We appreciate your interest in our services.
            </p>
          </div>
        </div>
      </div>

      <!-- Next Steps -->
      <div class="bg-gray-50 p-8 rounded-lg mb-8">
        <h3 class="text-2xl font-bold text-gray-900 mb-6">
          What happens next?
        </h3>

        <div class="space-y-6">
          <!-- Step 1 -->
          <div class="flex gap-4">
            <div class="flex-shrink-0">
              <div class="flex items-center justify-center h-10 w-10 rounded-full bg-navy-900 text-white font-bold text-lg">
                1
              </div>
            </div>
            <div>
              <h4 class="text-lg font-semibold text-gray-900 mb-2">
                We'll review your message
              </h4>
              <p class="text-gray-600">
                Our team will carefully review the details of your building project to understand your needs and requirements.
              </p>
            </div>
          </div>

          <!-- Step 2 -->
          <div class="flex gap-4">
            <div class="flex-shrink-0">
              <div class="flex items-center justify-center h-10 w-10 rounded-full bg-navy-900 text-white font-bold text-lg">
                2
              </div>
            </div>
            <div>
              <h4 class="text-lg font-semibold text-gray-900 mb-2">
                Quick response within 24 hours
              </h4>
              <p class="text-gray-600">
                We'll get back to you within 24 hours to discuss your project in detail and answer any questions you may have.
              </p>
            </div>
          </div>

          <!-- Step 3 -->
          <div class="flex gap-4">
            <div class="flex-shrink-0">
              <div class="flex items-center justify-center h-10 w-10 rounded-full bg-navy-900 text-white font-bold text-lg">
                3
              </div>
            </div>
            <div>
              <h4 class="text-lg font-semibold text-gray-900 mb-2">
                Free consultation and quote
              </h4>
              <p class="text-gray-600">
                We'll arrange a convenient time to discuss your project and provide you with a detailed, free quote with no obligation.
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Information -->
      <div class="bg-blue-50 border border-blue-200 p-8 rounded-lg mb-8">
        <h3 class="text-xl font-bold text-gray-900 mb-4">
          Need to reach us sooner?
        </h3>
        <p class="text-gray-700 mb-6">
          If you need immediate assistance, feel free to call us directly. We're here to help!
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href="tel:07773463383"
            class="inline-flex items-center justify-center px-6 py-3 bg-navy-900 text-white font-semibold rounded-lg hover:bg-navy-800 transition-colors duration-200"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Call 07773 463383
          </a>
          <a
            href="mailto:enquiries@arronbennettbuilding.co.uk?subject=Project Enquiry"
            class="inline-flex items-center justify-center px-6 py-3 bg-gray-200 text-navy-900 font-semibold rounded-lg hover:bg-gray-300 transition-colors duration-200"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Send Email
          </a>
        </div>
      </div>

      <!-- FAQ Section -->
      <div class="bg-white p-8 rounded-lg border border-gray-200">
        <h3 class="text-xl font-bold text-gray-900 mb-6">
          Frequently Asked Questions
        </h3>

        <div class="space-y-6">
          <!-- FAQ 1 -->
          <div>
            <h4 class="font-semibold text-gray-900 mb-2">
              When will you get back to me?
            </h4>
            <p class="text-gray-600">
              We aim to respond to all inquiries within 24 hours. Most responses are sent within a few hours during business hours.
            </p>
          </div>

          <!-- FAQ 2 -->
          <div>
            <h4 class="font-semibold text-gray-900 mb-2">
              Is there any charge for a consultation?
            </h4>
            <p class="text-gray-600">
              No, our initial consultation is completely free and comes with no obligation. We believe in getting to know our clients first.
            </p>
          </div>

          <!-- FAQ 3 -->
          <div>
            <h4 class="font-semibold text-gray-900 mb-2">
              Do you provide a written quote?
            </h4>
            <p class="text-gray-600">
              Yes, we provide detailed written quotes for all projects. Our quotes are comprehensive and transparent with no hidden costs.
            </p>
          </div>

          <!-- FAQ 4 -->
          <div>
            <h4 class="font-semibold text-gray-900 mb-2">
              What areas do you serve?
            </h4>
            <p class="text-gray-600">
              We primarily serve the Roseland Peninsula and surrounding areas of Cornwall. Contact us to confirm coverage for your location.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Back to Home Section -->
  <section class="py-12 px-4 bg-eggshell">
    <div class="max-w-3xl mx-auto text-center">
      <p class="text-gray-700 mb-6">
        While you wait to hear from us, feel free to explore more about our services.
      </p>
      <a
        href="/"
        class="inline-block bg-navy-900 text-white font-semibold px-8 py-3 rounded-lg hover:bg-navy-800 transition-colors duration-200"
      >
        Back to Home
      </a>
    </div>
  </section>

  <!-- Schema.org Structured Data for Conversion Tracking -->
  <script type="application/ld+json" set:html={JSON.stringify(successPageSchema)} />
</BaseLayout>

<style>
  @media (max-width: 640px) {
    .hero {
      padding: 2rem 1rem;
    }

    .hero h1 {
      font-size: 2.25rem;
    }
  }

  /* Focus visible states for accessibility */
  a:focus-visible,
  button:focus-visible {
    outline: 3px solid #1a2d4d;
    outline-offset: 2px;
  }
</style>
