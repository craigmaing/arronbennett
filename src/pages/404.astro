---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';

const pageTitle = "Page Not Found | Arron Bennett Roseland Builders";
const pageDescription = "The page you're looking for cannot be found. Return to our homepage or contact us for help with your building project on the Roseland Peninsula, Cornwall.";
---

<BaseLayout title={pageTitle} description={pageDescription} noindex={true}>
  <!-- Hero Section -->
  <section
    class="hero text-white py-16 lg:py-20 px-4"
    style="background-color: #1a2d4d;"
    aria-label="404 Error page"
    role="region"
  >
    <div class="max-w-4xl mx-auto text-center">
      <!-- 404 Large Number -->
      <div class="mb-8">
        <h1 class="text-8xl md:text-9xl font-bold select-none" style="opacity: 0.25; text-shadow: 0 2px 8px rgba(0,0,0,0.1);" aria-hidden="true">
          404
        </h1>
      </div>

      <!-- Main Heading -->
      <h2 class="text-4xl md:text-5xl font-bold mb-6" style="text-shadow: 0 2px 4px rgba(0,0,0,0.2);">
        Page Not Found
      </h2>

      <!-- Description -->
      <p class="text-xl md:text-2xl mb-8 max-w-2xl mx-auto leading-relaxed" style="opacity: 1; text-shadow: 0 1px 3px rgba(0,0,0,0.15);">
        Sorry, we couldn't find the page you're looking for. It may have been moved or doesn't exist.
      </p>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <Button
          href="/"
          variant="primary"
          size="lg"
          class="!bg-[#F27A5E] hover:!bg-[#E06B4E]"
        >
          Return Home
        </Button>
        <Button
          href="/contact-us"
          variant="ghost"
          size="lg"
          class="!border-white !text-white hover:!bg-white hover:!text-navy-900"
        >
          Contact Us
        </Button>
      </div>
    </div>
  </section>

  <!-- Helpful Links Section -->
  <section class="py-16 px-4 bg-white">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-3xl font-bold text-center mb-12 text-gray-900">
        What Are You Looking For?
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <!-- Services -->
        <div class="text-center p-6 rounded-lg border border-gray-200 hover:shadow-lg transition-shadow duration-200">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2 text-gray-900">Our Services</h3>
          <p class="text-gray-600 mb-4">View our building, renovation, and masonry services</p>
          <a href="/services" class="text-blue-600 font-semibold hover:text-blue-700 transition-colors duration-200">
            View Services →
          </a>
        </div>

        <!-- Projects -->
        <div class="text-center p-6 rounded-lg border border-gray-200 hover:shadow-lg transition-shadow duration-200">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2 text-gray-900">Our Projects</h3>
          <p class="text-gray-600 mb-4">See our completed work across Cornwall</p>
          <a href="/our-projects" class="text-blue-600 font-semibold hover:text-blue-700 transition-colors duration-200">
            View Projects →
          </a>
        </div>

        <!-- About -->
        <div class="text-center p-6 rounded-lg border border-gray-200 hover:shadow-lg transition-shadow duration-200">
          <div class="w-16 h-16 bg-yellow-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2 text-gray-900">About Us</h3>
          <p class="text-gray-600 mb-4">Learn about our 20+ years of experience</p>
          <a href="/about-us" class="text-blue-600 font-semibold hover:text-blue-700 transition-colors duration-200">
            Learn More →
          </a>
        </div>

        <!-- Contact -->
        <div class="text-center p-6 rounded-lg border border-gray-200 hover:shadow-lg transition-shadow duration-200">
          <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2 text-gray-900">Get in Touch</h3>
          <p class="text-gray-600 mb-4">Contact us about your building project</p>
          <a href="/contact-us" class="text-blue-600 font-semibold hover:text-blue-700 transition-colors duration-200">
            Contact Us →
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Emergency Contact Section -->
  <section class="py-16 px-4" style="background: linear-gradient(to bottom right, #A83820, #8B2E19);">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-white">
        Need Help Right Away?
      </h2>
      <p class="text-xl mb-8 text-white opacity-95">
        Call us directly or send an email
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button
          href="tel:07773463383"
          variant="ghost"
          size="lg"
          class="!bg-white !text-coral-500 hover:!bg-gray-50 !border-0"
        >
          Call 07773 463383
        </Button>
        <Button
          href="mailto:enquiries@arronbennettbuilding.co.uk"
          variant="ghost"
          size="lg"
          class="!border-white !text-white hover:!bg-white hover:!text-coral-500"
        >
          Send Email
        </Button>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Responsive adjustments */
  @media (max-width: 640px) {
    .hero {
      padding: 3rem 1rem;
    }

    .hero h2 {
      font-size: 2rem;
    }

    .hero p {
      font-size: 1.125rem;
    }
  }

  /* Focus visible states for all interactive elements */
  .hero *:focus-visible {
    outline: 3px solid white;
    outline-offset: 4px;
    border-radius: 2px;
  }

  /* Link hover states */
  section a {
    transition: all 0.2s ease-in-out;
  }

  /* Card hover effect */
  .grid > div {
    transition: all 0.2s ease-in-out;
  }

  .grid > div:hover {
    transform: translateY(-2px);
  }
</style>
