---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Privacy Policy - Arron Bennett Building";
const pageDescription = "Privacy Policy for Arron Bennett Building. How we protect your data, GDPR compliance, your rights, and how we handle personal information. Last updated October 2025.";

const schema = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": pageTitle,
  "description": pageDescription,
  "datePublished": "2018-07-10T08:36:58+00:00",
  "dateModified": "2025-10-22T11:01:11+00:00"
};
---

<BaseLayout title={pageTitle} description={pageDescription} schema={schema}>
  <div class="min-h-screen">
    <section class="hero bg-gradient-to-br from-blue-600 to-blue-800 text-white py-16 lg:py-20 px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
