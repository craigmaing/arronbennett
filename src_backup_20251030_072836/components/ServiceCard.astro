---
/**
 * Service Card Component
 *
 * Displays a service offering with icon, title, description, and features.
 * Optimized for service pages and homepage service sections.
 *
 * @component
 * @example
 * <ServiceCard
 *   title="Leadership Coaching"
 *   description="Transform your leadership approach"
 *   icon="users"
 *   features={['One-on-one sessions', 'Custom frameworks', 'Board-level insights']}
 *   href="/services/leadership-coaching"
 * />
 */

import type { ServiceCardProps } from '../types/components';

interface Props extends ServiceCardProps {}

const {
  title,
  description,
  icon,
  features = [],
  href,
  cta = 'Learn More',
  class: className = '',
} = Astro.props;

const cardClass = `
  group bg-white rounded-xl border-2 border-navy-100
  p-8 transition-all duration-300
  hover:border-navy-300 hover:shadow-2xl hover:-translate-y-2
  ${className}
`.trim().replace(/\s+/g, ' ');

// Icon mapping (simple SVG icons)
const iconMap: Record<string, string> = {
  users: 'M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z',
  briefcase: 'M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z',
  heart: 'M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z',
  chart: 'M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z',
  star: 'M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z',
};

const iconPath = icon && iconMap[icon] ? iconMap[icon] : iconMap.users;
---

<article class={cardClass}>
  <!-- Icon -->
  {icon && (
    <div class="flex items-center justify-center w-16 h-16 mb-6 bg-coral-100 rounded-xl group-hover:bg-coral-200 transition-colors">
      <svg
        class="w-8 h-8 text-coral-600"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        aria-hidden="true"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d={iconPath}
        />
      </svg>
    </div>
  )}

  <!-- Title -->
  <h3 class="text-2xl font-bold text-navy-900 mb-4 group-hover:text-navy-700 transition-colors">
    {title}
  </h3>

  <!-- Description -->
  <p class="text-gray-700 mb-6 leading-relaxed">
    {description}
  </p>

  <!-- Features List -->
  {features.length > 0 && (
    <ul class="space-y-3 mb-8">
      {features.map((feature) => (
        <li class="flex items-start gap-3">
          <svg
            class="w-5 h-5 text-coral-500 mt-0.5 flex-shrink-0"
            fill="currentColor"
            viewBox="0 0 20 20"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
              clip-rule="evenodd"
            />
          </svg>
          <span class="text-gray-700 text-sm">{feature}</span>
        </li>
      ))}
    </ul>
  )}

  <!-- Slot for additional content -->
  <div class="mb-6">
    <slot />
  </div>

  <!-- CTA Button -->
  {href && (
    <a
      href={href}
      class="inline-flex items-center gap-2 text-navy-700 font-semibold group-hover:text-navy-900 transition-colors"
    >
      {cta}
      <svg
        class="w-5 h-5 transition-transform group-hover:translate-x-1"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        aria-hidden="true"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M17 8l4 4m0 0l-4 4m4-4H3"
        />
      </svg>
    </a>
  )}
</article>

<style>
  /* Smooth animations for the card */
  article {
    transform-origin: center;
  }

  /* Feature list styling */
  ul {
    list-style: none;
  }

  /* Ensure icon stays circular on all screen sizes */
  .w-16.h-16 {
    min-width: 4rem;
    min-height: 4rem;
  }
</style>
